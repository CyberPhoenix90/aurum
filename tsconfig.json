{
	"compilerOptions": {
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"module": "esnext",
		"newLine": "LF",
		"target": "es2017",
		"noUnusedLocals": true,
		"declarationMap": true,
		"jsx": "react",
		"jsxFactory": "Aurum.factory",
		"declaration": true,
		"inlineSources": true,
		"sourceMap": true,
		"watch": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noEmitOnError": true,
		"outDir": "dist",
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts"
	]
}