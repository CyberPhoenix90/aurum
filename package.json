{
	"name": "aurumjs",
	"version": "0.6.4",
	"description": "Stream based declarative DOM rendering library for javascript",
	"main": "prebuilt/cjs/aurumjs.js",
	"typings": "prebuilt/esnext/aurumjs.d.ts",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"prepublish": "npm run deploy",
		"test": "tsc -p tsconfig.test.json && http-server -o -c-1",
		"deploy-test": "npm run build",
		"deploy": "npm run build && tsc -p tsconfig.amd.json && tsc -p tsconfig.cjs.json"
	},
	"homepage": "https://aurumjs.org/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CyberPhoenix90/aurum"
	},
	"keywords": [
		"web-components",
		"webcomponents",
		"DOM",
		"stream",
		"rendering"
	],
	"author": "Joao Santos (CyberPhoenix)",
	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/mocha": "^8.0.2",
		"@types/sinon": "^9.0.4",
		"chai": "^4.2.0",
		"http-server": "^0.12.3",
		"mocha": "^8.1.1",
		"prettier": "^2.2.1",
		"requirejs": "^2.3.6",
		"sinon": "^9.0.3",
		"typescript": "^4.2.2"
	}
}
