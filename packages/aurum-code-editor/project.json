{
    "name": "aurum-code-editor",
    "version": "0.0.0",
    "description": "Fully featured code editor as an aurum component",
    "main": "prebuilt/esnext/aurum-components.js",
    "typings": "prebuilt/esnext/aurum-components.d.ts",
    "compiler": "typescript",
    "homepage": "https://aurumjs.org/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CyberPhoenix90/aurum-code-editor"
    },
    "keywords": ["aurumjs", "monaco", "code", "editor", "component"],
    "author": "Joao Santos (CyberPhoenix)",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.5",
        "@types/mocha": "^8.2.0",
        "@types/sinon": "^9.0.4",
        "requirejs": "^2.3.6",
        "chai": "^4.2.0",
        "mocha": "^8.2.1",
        "sinon": "^9.0.3"
    },
    "dependencies": {
        "@emotion/css": "^11.1.3",
        "monaco-editor": "^0.33.0",
        "xterm": "^4.17.0"
    },
    "projectReferences": ["aurumjs", "aurum-components"],
    "defaultBuildSettings": {
        "assembly": "library",
        "includes": ["src/**/*.ts", "src/**/*.tsx"],
        "jsxFragmentFactory": "Aurum.fragment",
        "jsxFactory": "Aurum.factory",
        "jsx": "react"
    },
    "builds": [
        {
            "outDir": "prebuilt/esnext",
            "name": "esnext",
            "platform": "isomorphic"
        },
        {
            "outdir": "dist/test",
            "name": "test",
            "includes": ["test/**/*.ts", "test/**/*.tsx", "src/**/*.ts", "src/**/*.tsx"],
            "platform": "browser"
        }
    ]
}
