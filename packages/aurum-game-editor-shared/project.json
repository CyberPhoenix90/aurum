{
    "name": "aurum-game-editor-shared",
    "version": "0.0.0",
    "description": "Fully featured code editor as an aurum component",
    "main": "prebuilt/cjs/aurum-game-editor-shared.js",
    "typings": "prebuilt/cjs/aurum-game-editor-shared.d.ts",
    "compiler": "typescript",
    "homepage": "https://aurumjs.org/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CyberPhoenix90/aurum-game-editor-shared"
    },
    "author": "Joao Santos (CyberPhoenix)",
    "license": "MIT",
    "projectReferences": ["aurumjs"],
    "defaultBuildSettings": {
        "assembly": "library",
        "includes": ["src/**/*.ts", "src/**/*.tsx"],
        "jsxFragmentFactory": "Aurum.fragment",
        "jsxFactory": "Aurum.factory",
        "jsx": "react"
    },
    "builds": [
        {
            "outDir": "prebuilt/amd",
            "name": "amd",
            "platform": "browser"
        },
        {
            "outDir": "prebuilt/cjs",
            "name": "cjs",
            "platform": "node"
        },
        {
            "outDir": "prebuilt/exnext",
            "name": "esnext",
            "platform": "isomorphic"
        }
    ]
}
