{
	"compilerOptions": {
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"module": "amd",
		"newLine": "LF",
		"target": "es2019",
		"noUnusedLocals": true,
		"declarationMap": true,
		"jsx": "react",
		"strictFunctionTypes": true,
		"jsxFactory": "Aurum.factory",
		"declaration": true,
		"inlineSources": true,
		"sourceMap": true,
		"watch": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noEmitOnError": true,
		"outFile": "prebuilt/amd/aurumjs.js",
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"]
}
